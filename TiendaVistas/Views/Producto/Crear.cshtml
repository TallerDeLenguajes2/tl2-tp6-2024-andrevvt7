@model Producto

<div class="text-center">
    <h1> CREAR PRODUCTO</h1>

    <form asp-controller="Producto" asp-action="CrearProducto" method="post">
        <div class="form-group">
            <label for="descripcion">Descripci√≥n</label>
            <input asp-for="Descripcion" type="text" class="form-control" id="descripcion">
            <label for="precio">Precio</label>
            <input asp-for="Precio" type="text" class="form-control" id="precio">
        </div>

        <button type="submit" class="btn btn-default">Submit</button>
    </form>

     @if (ViewBag.Creado == true)
    {
        <div class="alert alert-success mt-3">
            Producto creado exitosamente.
        </div>
    }

</div>